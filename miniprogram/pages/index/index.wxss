.container{
  display: flex;
  flex-direction: column;
}

.navbar{
  display: flex;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 500;
  width: 100%;
  height: 25px;
  flex-direction: row;
  text-align: center;
  color: #ffffff;
  font-size: 12px;
  box-sizing: border-box;
  background-color: #4169E1;
  border-top: 1rpx solid #DFDFDF;
  border-bottom: 1rpx solid #DFDFDF;
}

.navbar-item{
  flex: 1;
  padding: 6rpx 0;
}

.navbar-item-active{
  transition: all 0.3s;
  border-bottom: 10rpx solid #eeeeee;
  color: #eeeeee;
}

.content-wrapper{
  padding-top: 50px;
}

.my_canvas{
  display: flex;
  flex-direction: row;
  position: absolute;
  width: 100%;
  height: 100rpx;
  top: 170px;
}

.my_canvas canvas text{
  font-size: 0.7pc;
  color: #dddddd;
  font-weight: bold;
  display:flex;
  align-items:center;
  justify-content:center;
  padding-top: 22px;
}

.goods1{
  width: 45%;
}

.goods1 image{
  width: 45%;
