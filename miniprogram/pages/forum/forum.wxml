<!--pages/forum/forum.wxml-->

<view class="mine">
  <view wx:if="{{canIUse}}" open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo" class='btn-logn'>
   <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}"  background-size="cover"></image>
   <text class="userinfo-nickname">{{userInfo.nickName}}</text>
  </view>
</view>

<view class="my-post">
  <view class="information">
    <view class="post-num">
      <text>1</text>
    </view>
    <view class="post">
      <text>我发布的</text>
    </view>
  </view>

  <view class="information">
    <image src="../../images/tabBar/forum.png" mode="widthFix"></image>
    <view class="want-post">
      <text>我要发贴</text>
    </view>
  </view>

  <view class="information">
    <view class="collection-num">
      <text>3</text>
    </view>
    <view class="collection">
      <text>我收藏的</text>
    </view>
  </view>
</view>

<view class="board">
  <view class="text-border">挂人区</view>
  <view class="text-border">咨询区</view>
  <view class="text-border">吐槽区</view>
</view>





