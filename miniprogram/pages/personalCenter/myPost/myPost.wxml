<!--pages/personalCenter/myPost/myPost.wxml-->

<view class="page">
<view class="page__bd">
  <view class="weui-panel weui-panel_access">
    <view class="weui-panel__hd">我的发布</view>

    <block wx:if="{{thingData.length>0}}">
    <view class="weui-panel__bd">
      <block wx:for="{{thingData}}" wx:key="thingInfo">
      <navigator url="" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
        <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
          <image class="weui-media-box__thumb" src='{{item.thumbnail}}' />
        </view>
        <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
          <view class="weui-media-box__title">{{item.title}}</view>
          <view class="weui-media-box__desc">{{item.discription}}</view>
          <button class="btn" type="primary" bindtap="">完成交易</button>
          <button class="btn" type="primary" catchtap="deletePost" bindtap="">删除发布</button>
        </view>
      </navigator>
    </block>
    </view>
</block>


  </view>
</view>
</view>
